= provide(:title,@user.name)
.row
  %adide.col-md-4
    %section.user_info
      %h1
        =gravatar_for @user
        = @user.name
    %section.stats
      = render partial: 'shared/stats'
  .col-md-8
    = render partial: 'follow_form' if logged_in?
    -if @user.microposts.any?
      %h3 Microposts (#{@user.microposts.count})
      %ol.microposts
        = render @microposts
      = will_paginate @microposts